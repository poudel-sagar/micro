    class MyAdapter extends ArrayAdapter<String>{
        Context context;
        String myTitles[];
        String myDescriptions[];
        int[] imgs;
        MyAdapter(Context c,String[] titles,int[] imgs,String[] descriptions )
        {
            super(c,R.layout.sciencerow,R.id.sciencetext1,titles);
            this.context=c;
            this.imgs=imgs;
            this.myTitles=titles;
            this.myDescriptions=descriptions;
        }

        @NonNull
        @Override
        public View getView(int position, @Nullable View convertView, @NonNull ViewGroup parent) {
            LayoutInflater layoutInflater=(LayoutInflater)getApplicationContext().getSystemService(Context.LAYOUT_INFLATER_SERVICE);
            View sciencerow=layoutInflater.inflate(R.layout.sciencerow,parent,false);
            ImageView images=sciencerow.findViewById(R.id.sciencelogo);
            TextView myTitles=sciencerow.findViewById(R.id.sciencetext1);
            TextView myDescriptions=sciencerow.findViewById(R.id.sciencetext2);
            images.setImageResource(imgs[position]);
            myTitles.setText(titles[position]);
            myDescriptions.setText(descriptions[position]);
            return sciencerow;
        }
    }


